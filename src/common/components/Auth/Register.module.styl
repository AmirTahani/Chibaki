.inputWrapper
  margin 10px
  
.autocomplete
  form
  :global(.ant-select-selection)
    padding: 0

.wrapper
  flex 1 1 100%
  
  direction ltr
  text-align center
  
  input
  :global(.ant-input)
    text-align right !important
    direction rtl !important
  
    line-height: 40px !important
    height: 40px !important
  
    font-size: 1rem
    
    &::-webkit-input-placeholder
      text-align: right !important
      direction rtl !important