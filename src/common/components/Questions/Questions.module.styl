@import '../../styles/variables'

.modal
    margin-top: 10px;
    min-height: 270px;
    
    width: 100% !important
    max-width: 520px
    
    :global(.ant-modal-content)
        height: 500px
    
        display: flex
        flex-direction: column
        
    :global(.ant-modal-body)
        flex 1 1 100%
        height: 100%
        overflow-y: auto
    
        padding: 12px 20px
        
    :global(.ant-modal-footer)
        flex 1 1 53px
        
    @media (max-width $md)
        height: 100%
        max-width: none
        
        top: 0
        
        margin: 0
        padding: 0
        
        :global(.ant-modal-content)
            border-radius: 0
            height: 100%


.stepsContent {
    //height: 270px;
    //overflow: auto;
}

.footer {
    display: flex;
    justify-content: space-between;
}

.closeButton
    position: absolute;
    top: 0;
    left: 0;
    
    padding: 15px 18px
    cursor: pointer
	
    appearance none
    border: none;
    background-color: transparent
    
    border-radius: 5px 0 0 0
    transition .15s
    
    &:hover
    &:focus
        outline none
        background-color: #eee

.beginWrapper {
    display: flex;
    flex-direction: column;
    min-height: 300px;
    margin-top: 60px
}

.beginText {
    padding: 60px 20px 20px
    text-align: center;
    
    font-size: 1.4rem
    line-height: 1.8
    
    max-width: 300px
    margin 0 auto
}

.logo {
    display: flex;
    justify-content: center;
    align-self: center;
    width: 135px;
    height: 47px;
}

.progressBar
    width: auto
    
    position: absolute
    left: 55px;
    right: 24px
    top: 14px
    
    z-index: 10

.button
    //background-color: rgba(0,0,0,0)
    appearance none
    
    height: 40px
    line-height: 38px
    
    display: inline-flex
    align-items: center
    justify-content: center
    
    &Back
        composes button
        float: left
        [class^='icon']
            padding-right: 7px
        
    &Next
        composes button
        [class^='icon']
            padding-left: 7px
            
    &Begin
        composes button

.spinnerWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}

.title
    font-size: 1.4rem
    font-weight: 900
    line-height: 1.6
    
    text-align: center
    margin: 40px 0 30px
    
.row
    margin-bottom: 24px
    
.radioGroup
    display: block
    
    :global(label)
        display: block