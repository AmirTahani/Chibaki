@import '../../styles/variables'

.c-hero
	position relative
	margin-top $headerHeight

	// @media (max-width $md)
	// 	margin-top $headerHeightMd

	// &--sab
	// 	margin-top $headerSabHeight

	// 	@media (max-width $md)
	// 		margin-top $headerSabHeightMd

	&__front
	&__slide
		min-height $heroHeight
		max-height $heroMaxHeight

		@media (max-width $md)
			min-height $heroHeightMd

		.proficients &
			min-height 35vh
			
	&--contact
	&--about
		overflow hidden

		& ^[0]__back
			animation-iteration-count infinite
			animation-direction alternate

		& ^[0]__front
			height 100%
			min-height 40vh

			@media (max-width $md)
				min-height 30vh

		& ^[0]__content
			margin-top 0

	// Background Slider
	&__back
		position absolute

		overflow hidden

		top 0
		left 0
		right 0
		bottom 0

		background-size cover
		background-repeat no-repeat
		background-position center center

		z-index $heroBackIndex

		^[0]--contact &
			background-image url('/assets/images/contact/hero.jpg')

		^[0]--about &
			background-image url('/assets/images/about/hero.jpg')

			@media (max-width $md)
				background-image url('/assets/images/about/hero-sm.jpg')

		^[0]--home &
			background-image url('/assets/images/hero/1.jpg')

		&:after
			content ''
			position absolute
			
			top 0
			left 0
			
			width 100%
			height 100%
			
			background-color rgba(0,0,0,.2)
			z-index 1

	// Hero Slider
	/.slider--hero
		&
		& *
			height 100%

	// Hero Content
	&__front
		display flex
		flex-direction column
		justify-content center
		align-items center

		position relative

		z-index $heroContentIndex

	&__content
		display flex
		flex-direction column
		justify-content center
		align-items center

		width 100%

		padding 25px 0

		position relative

	// Hero Text
	&__text
		margin-left 40px
		margin-right 40px

		color #fff
		text-align center

		line-height 2

		user-select none

		text-shadow 0 0 3px rgba(0,0,0,.8), 0 0 12px rgba(0,0,0,.3)

		^[0]--proficients &
			text-shadow 0 0 0

		^[0]--home &
			margin-bottom 2rem

	// @title
	&__title
		font-size 4.2rem
		font-weight 900
		line-height 1.7

		color #fff
		margin-bottom 1rem

		&:only-child
			margin-bottom 0

		@media (max-width $sm)
			font-size 3.1rem

		@media (max-width $xs)
			font-size 2.5rem
			margin-bottom .5rem

	&__sub
		font-size 1.12rem
		line-height 1.85

		max-width 460px
		margin 0 auto

		color #fff

		strong
			font-size 1.25rem
			font-weight 900

		@media (max-width $xs)
			font-size .95rem
			
			strong
				font-size 1rem

	@media (max-width $sm)
		&__text
			margin-right 10px
			margin-left 10px
			
			^[0]--home &
				margin-bottom 1.5rem

		.hero__sub
			font-weight 400
