.footerInner {
  padding: 20px 15px;
}

.copyRight {
  text-align: center;
  padding: 10px;
}

.copyRightText {
  font-weight: 100;
  font-size: 1.1rem;
}

.logo {
  width: 50px;
  height: 50px;

  margin-bottom: 1.5rem;
}

.footerLink {
  display: inline-block;
  color: #666;
  font-weight: 900;
  font-size: 1rem;

  line-height: 2;

  text-decoration: none;

  transition: 0s;
  border-bottom: 2px solid rgba(0, 0, 0, 0);

  padding: 0 1rem 0.2rem;
  margin: 10px;
  &:hover,
  &:focus {
    border-bottom-color: #1e87f0;
  }
}

.iconLink {
  display: inline-block;
  color: #666;
  font-weight: 900;
  font-size: 1rem;

  line-height: 2;

  text-decoration: none;

  transition: 0s;
  border-bottom: 2px solid rgba(0, 0, 0, 0);

  padding: 0 1rem 0.2rem;

  &:hover,
  &:focus {
    border-bottom-color: #1e87f0;
  }
}