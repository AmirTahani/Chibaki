@import 'variables'

.hero
	position: relative;
	
	min-height: 300px;
	overflow: hidden;
	
	margin-top: 60px;
	padding: 60px 20px;
	
	display: flex;
	align-items: center;
	justify-content: center;
	
	@media (max-width $md)
		margin-top: 50px

.heroBg
	position: absolute;
	
	top: 0;
	left: 0;
	
	width: 100%;
	height: 100%;
	
	z-index: 1;
	
	&:after
		content: '';
		
		position: absolute;
		top: 0;
		left: 0;
		
		width: 100%;
		height: 100%;
		
		background-color: rgba(0, 0, 0, .3);
		z-index: 2;
	
	img
		width: 100%;
		height: 100%;
		
		object-fit: cover;
		font-family: 'object-fit: cover;';

.heroContent
	position: relative;
	
	text-align: center;
	
	z-index: 10;

.heroTitle
	font-size: 3rem;
	font-weight: 900;
	
	margin-bottom: 1rem;
	
	color: #fff;
	text-align: center;
	
	line-height: 2;
	text-shadow: 0 0 3px rgba(0, 0, 0, .8);
