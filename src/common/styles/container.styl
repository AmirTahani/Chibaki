@import 'variables'
// l- stands for layout
.l-container
	width 100%
	max-width 1200px

	margin-left auto
	margin-right auto
	
	&--expand
		max-width none

	&--xl
		max-width 1920px

	&--lg
		max-width 1600px
		
	&--md
		max-width 1400px
		
	&--sm
		max-width 960px

	&--xs
		max-width 660px

	&--fixed-header
		padding-top 60px
