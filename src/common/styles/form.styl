@import 'variables'

.label
    font-size 1rem
    font-weight 600
    
    color #334657
    display block
    
    margin-bottom .4rem
    
.input
    line-height 40px !important
    height 40px !important
    
    color #334657
    border-color #cbd8e3
    
    &::-webkit-input-placeholder
        color rgba(117, 140, 160, 0.61)
    
    &:hover
    &:focus
        border-color $color
