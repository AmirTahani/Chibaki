@import 'variables';

.c-btn
	appearance none

	padding 0 1.1rem
	margin .3rem .6rem

	line-height 40px
	font-size 1rem
	
	background rgba(0,0,0,0)
	border none
	
	color $color
	
	cursor pointer
	outline none

	border-radius 5px
	
	&:hover
	&:focus
		&:not(.c-btn--primary)
			background-color alpha($color, 5%)

	&:focus
		box-shadow 0 0 0 2px alpha($color, 60%)

	&--primary
		color #fff
		background-color $color
		box-shadow 0 1px 6px -1px alpha($color, 35%)

		&:hover
		&:focus
			background-color darken($color, 20%)
	
	&--round
		border-radius 50px
		border 1px solid $color

	&--border
		border 1px solid $color
		
	&--lg
		min-width 180px
		line-height 50px
		&:only-child
			font-size 1.2rem


.radio-btn-round-lg
	.ant-radio-button-wrapper
		position relative
		
		color $color

		border 2px solid $color
		border-radius 100px !important
		
		margin .7rem

		line-height 50px
		height auto
		min-width 190px
		
		text-align center
		
		font-weight 900
		font-size 15px

		overflow hidden
		
		&:first-child
			border-color $color
			
		// &:before
		// 	content none

		&:before
			content "\e907"
			font 16px jopp !important
			color #4FF2CA

			width 22px
			height 18px

			position absolute
			left -22px
			top 0
			bottom 0
			right auto

			background rgba(0,0,0,0)

			vertical-align middle
			margin auto 0

			opacity 1

		&
		&:before
			transition .15s
			
		&.ant-radio-button-wrapper-checked
			padding-left 45px

			&:before
				left 15px
				opacity 1
				background rgba(0,0,0,0) !important