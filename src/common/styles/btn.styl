@import 'variables';

.c-btn
	appearance none

	padding .3rem 1.1rem
	margin .3rem .6rem

	font-size 1rem
	
	background rgba(0,0,0,0)
	border none
	
	color $color
	
	cursor pointer
	outline none
	
	&:hover
		background-color alpha($color, 5%)

	&:focus
		box-shadow 0 0 12px alpha($color, 50%)
	
	&--round
		border-radius 50px
		border 1px solid $color