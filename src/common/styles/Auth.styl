@import 'variables'

.wrapper
    height 100vh
    
    display flex
    align-items center
    justify-content center

    &:before
        content ''
        
        position absolute
        
        top 0
        left 0
        bottom 0
        right 0

        background: #fff url('/assets/images/pattern/pattern-dark-blue.svg') center center / 240px repeat;
        opacity: .1;

.content
    width 100%
    max-width 520px
    
    height 100%
    max-height 460px

    background-color #fff

    box-shadow 0 4px 12px rgba(0,0,0,.15)

    position relative

    display flex
    flex-direction column

    @media (max-width $sm)
        z-index 999999999
        max-width none

        @media (max-height $lg)
            max-height none
            
.section
    padding 16px 24px
    flex 1 1 auto

.header
    display block

    border-bottom 1px solid #eee 
    
    h1
        margin 0

.logo
    display block
    
    &Img
        width 110px
        height 40px

.body
    display flex
    align-items center
    
    height 100%
    
    overflow auto

    > *
        flex 1 1 auto

.footer
    // 
  
.btn
    
    &Submit
        display block
        width 100%

        margin 0

    &Wrapper
        display flex
        justify-content space-between

    &Inner
        
        &Loading
            display flex
            justify-content center

            padding 13px

    &Loader
        padding: 0 !important
        margin: 0 !important
        
        zoom .6 !important
        
        &Dot
            background-color: #fff !important
