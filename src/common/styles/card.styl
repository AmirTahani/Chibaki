@import "variables"

.card
	&:not(md-card)
		margin 0 auto
		box-shadow 0px 0px 6px rgba(0, 0, 0, 0.25)
		background-color #fff

		*+&
			margin-top 1.4rem

	&__header
		padding 16px

		.card--offer &
			padding 10px 20px

			@media (max-width $sm)
				padding 7px 10px

	&__heading
		background-color rgb(242,242,242)
		border-bottom solid 1px #e8e8e8

		font-weight 600
		font-size .9rem
		text-align right
		line-height 1.4

		margin 0
		padding .6rem 1rem

		color $black1

		// @media (max-width $xs)
			// border-top 1px solid #e8e8e8

		&--bw
			padding-top .45rem
			padding-bottom .45rem
			border-top solid 1px #e8e8e8

		/ .c-h--icon
			display flex
			justify-content space-between
			align-items center

			> *
				display table-cell
				vertical-align middle

		/ .c-h__icon
			color $color

			&:hover
				color darken($color, 20%)

	&__footer
	/.uk-card-footer
		border-top solid 1px rgb(232,232,232)

		~/--projects &
			padding 20px
			margin-top 20px

			display flex
			align-items center
			text-align center
			justify-content center

	&__body
		line-height 1.3
		padding 40px

		
		@media (max-width 639px)
			padding 20px

		&--media
			padding 25px

		&--md
			padding 30px

			@media (max-width 639px)
				padding 15px

		&--sm
			padding 15px

			@media (max-width 639px)
				padding 10px

	&__avatar
		overflow hidden
		border-radius 50%
		margin 0 auto
		width 40px
		height 40px

		display inline-block

		/.card-avatar__img
			width 100%
			height 100%
			
			background-size cover
			background-position center center

		.card-avatar__wrapper &
			margin-bottom 0

		&
		img
			display block
			background-color #fff

		/.card-avatar__wrapper
			position relative
			margin 0 auto

			display flex
			align-items center
			justify-content center

			&--md
				&
				.card__avatar
					width 120px
					height 120px


		/.card-avatar__btn
			position absolute
			bottom -5px
			left -5px
			
			width 30px !important
			height 30px !important
			min-height 30px !important

			display flex !important
			justify-content center
			align-items center
			
			md-icon
				font-size 18px
				line-height 22px

		.offers &
		.customers &
			width 40px
			height 40px
			margin-left .65rem

			/.customers__link:hover
			/.customers__link:focus
				text-decoration none

		.card--project &
			width 65px
			height 65px

		/ .settings .card-avatar__wrapper
		/ .settings .card__avatar
			width 180px
			height 180px

		~/--profile .card-avatar__wrapper
			margin-bottom 1rem

		~/--profile .card__avatar
			margin-bottom 0

	&__title
		font-weight 600
		font-size 1rem
		color $black1

	&__sub
		font-weight 500
		font-size .8rem
		color $black3

		margin .4rem 0 0
		line-height 1.8

	&__textarea
	&__textarea.uk-textarea
		max-height 7rem
		min-height 6rem
		min-width 100%
		font-size .85rem
		line-height 1.7

	&__price
		font-size .8rem
		color $black2

		strong
			font-size 1.2rem
			font-weight 900

			color $black1
			margin .35rem 0

	&__desc
		margin 1rem 0 -.2rem
		line-height 2
		font-size .85rem
		color $black2
		text-align initial

		overflow-wrap break-word
		word-wrap break-word

		.card--offer &
			padding 0 30px
			@media (max-width $sm)
				padding 0 10px

	// @trust
	&__trust
		padding-bottom 10px
		color $color
		text-align center
		font-weight 600

		~/-trust__label
			margin-left 8px
			font-size .9rem
		
		&--sm
			padding-left 20px
			padding-right 20px
			font-size 11px

	&__info

		&--column
			display flex
			position relative
			align-items right
			flex-direction column
			text-align initial

			div + div
				margin-top .6rem

			> div
				color $black3
				font-weight 100
				font-size .8rem

				+ div
					font-weight 600
					font-size .9rem
					color $black1
					line-height 1.7

			& + &
				margin-top .8rem
				padding-top .8rem
				border-top 1px solid #eee

		&--row

			&
			/.card-info__inner
				width 100%
				display table
				font-size 12px
				height 30px

				> *
					display table-cell
					vertical-align middle

			/.c-info__last
				width 1px

				a
				a:focus
					outline none

			& + *
				margin-top 10px

		&--editable
			cursor pointer

			md-input-container
				padding 0 2px
			
			.c-icon--edit
				display none
				color $color

			.c-info--check

				&:hover
				&:focus
					outline none
					color $color

			&:hover
			&:focus
				outline none
				
				.c-icon--field
					display none

				.c-icon--edit
					display inline-block

		/ .c-info__icon
			padding-left .5rem
			color rgb(188,189,191)
			width 1px

			svg
				width 24px
				fill currentColor

			&:only-child
				float right

	&__btn
		display block
		outline none
		border none
		font-size .9rem
		font-weight 900
		color $color
		cursor pointer
		padding .5rem .85rem
		background rgba(0,0,0,0)
		text-align center

		&--footer
			display block
			width 100%
			margin 0

			border-top 1px solid #eee

		&:hover
			color darken($color, 40%)
			text-decoration none

		&[disabled]

			&:hover
				color $color

	&__intro
		margin-top 8px
		border-top 1px solid alpha(#000, .1)

		.card--proficient ^[0..1]
			display flex
			flex-direction row
			align-items center
			
			padding-top 13px

	&-intro__label
		font-size 13px
		line-height 27px
		
		color $color

	&-intro__text
		// @intro
		height 27px
		line-height 27px

		display inline-block

		// word-wrap break-word
		white-space nowrap
		overflow hidden
		
		font-size 12px
		color #424242

		margin-right 15px

	&__date
		color $black3
		font-weight 100
		font-size .75rem

		display flex
		align-items flex-end
		flex-wrap nowrap

		text-align center

		margin-bottom 5px
	
	&__badge
		background-color $color
		color #fff
		font-weight 400

	.rating2
		label
			&:before
				margin 0 .15rem
				font-size 1rem

	// @sizing
	&--md
		max-width 48rem

		&.card__body
		& .card__body
			padding 30px

			@media (max-width 639px)
				padding 15px

	&--sm
		width 100%
		max-width 33rem

		@media (max-width $xs)
			max-width none

		&.card__body
		& .card__body
			padding 15px

			@media (max-width 639px)
				padding 10px

	&--sm
	&--md
		width 100%

	&--footer-btn
		.card__body
			&
			^[1]^[2..-1]
				padding-bottom 0

	&--projects

		.card
			position relative
			height 100%
			display flex
			align-items center

			> div
				flex 1 1 0

	/.profile__pics
		// padding 10px

	/.profile-pics__item
			display flex
			align-items center
			justify-content center
			overflow hidden
			height 90px

	/.comments

		&__inner

			padding 1rem
			height 14rem
			overflow-x hidden
			overflow-y auto

			&.card__body--sm
				height auto
				max-height 14rem

		&__item
			padding-left 1rem
			& + &
				margin-top .7rem

		&__header
			display flex
			justify-content space-between
			align-items center
			font-weight 600
			font-size 1rem

		&__body
			font-size .75rem
			margin-top .4rem
			color $black3

	&--disabled
		opacity .7
		transform scale(.99)
		transition .1s linear

		&:hover
		&:focus
			opacity 1
			transform scale(1)
		

.upload-box
	padding 2.4rem 1.6rem
	
	border-radius 10px
	border 2px dashed #e0e0e0
	cursor pointer

	margin .8rem 0 1.5rem
	
	.upload-box__inner
		display inline-block
		
		font-size .95rem
		font-weight 300
		color #616161

	&:hover
	&:focus
	&.dragover
		outline none
		border-color #9e9e9e
		
		strong
			// border-bottom 1px solid

		.upload-box__inner
			color #212121


// Dashboard Card
.image-container
	height 400px
	display flex
	align-items center
	justify-content center
	padding-bottom 15px

	&__img
		max-height 100%
		max-width 100%
		

// @c-card
.c-card
	position relative
	z-index 10

	margin 10px 0
	padding 10px
	
	border-radius 4px
	background-color #fff

	box-shadow 0 0 4px rgba(0,0,0,.3)

	@media (min-width 500px)
		margin 10px

	@media (max-width $xs)
		border-radius 0

	&^[0]--inherit
		// Card elements inherit color from card itself
		& ^[0]__title
			color inherit
			
		& ^[0]__price
			color inherit

	&--border
		border 1px solid #d1d9dd
		box-shadow 0 0 10px 2px alpha(#e6e6e7, 50%)

		&-blue
			box-shadow 0 0 4px rgba(0,0,0,.3)
			border 1px solid alpha($color, 50%)

	&--shadow
		box-shadow 0 0 10px 2px rgba(147, 191, 226, 0.5)

	&--bg-pattern
		position relative
		z-index 10

		&:before
			content ''

			position absolute
			top 0
			left 0
			
			width 100%
			height 100%
			
			background #fff url('/assets/images/pattern.svg') center center / 300px repeat
			opacity .07

			z-index -1
			
		&:nth-of-type(2)
			&:before
				background-position center 150%
			
		&:nth-of-type(3)
			&:before
				background-position center -40%
			
	&--round
		border-radius 10px

		padding 40px 50px

		@media (max-width $md)
			padding 10px 15px

	&--signup
		
		margin 0

		& ^[0]__title
			font-weight 600
			color #656565

			text-align center

			font-size 1rem
			margin-bottom 15px

	&--login
		width 100%
		max-width 25rem

	&--proficient
		padding 0
		margin-left .5rem
		margin-right .5rem

		box-shadow 0 0 15px alpha(#93BFE2, 30%)

		& ^[0]__body
			padding 0 20px 20px

			@media (max-width $xl) and (min-width 960px)
				padding 0 10px 10px

		& ^[0]__header
			padding 25px 10px 15px
			text-align center

		& .card__avatar
			width 100px
			height 100px
			box-shadow 0 2px 5px 0 alpha(#93BFE2, 50%)

		& .card__title
			margin-top 10px
			font-size 1.2rem


	&--plan
		$width = 270px
		flex 1 0 $width
		max-width $width

		position relative

		text-align center

		$shadowAlpha = 50%

		/.plan--blue
			$card1color = $color
			color $card1color
			box-shadow 0 2px 5px alpha($card1color, $shadowAlpha)

		/.plan--yellow
			$card2color = #FF8160
			color $card2color
			box-shadow 0 2px 5px alpha($card2color, $shadowAlpha)

		/.plan--purple
			$card3color = #A30475
			color $card3color 
			box-shadow 0 2px 5px alpha($card3color, $shadowAlpha)

		~/__wrapper
			display flex
			justify-content center
			flex-flow row wrap

			padding 10px 0

		& ^[0]__note
			color $color

			line-height 19px
			height 38px
			overflow hidden

			margin-bottom 10px

		& ^[0]__header
			display flex
			align-items center
			justify-content center
			min-height 100px

		/ .plan__icon
			width auto
			height 65px
			margin-top 20px
			margin-bottom 10px

		&.plan--discount:after
			// Discount badge
			content url('/assets/images/discountBadge.svg')
			display block
			
			position absolute
			top 0
			left 10px
			
			width 70px
			
			z-index 99999

		/^[0]__duration
			color #4c4c4c
			font-size 1.2rem
			margin-top 15px

		& ^[0]__body
			font-size 24px 

		& ^[0]__title
			font-size 22px
			font-weight 900

			line-height 1.4

			strong
				font-size 24px

		& ^[0]__price
			font-weight 900

			padding 30px 0 10px
			height 130px

			display flex
			flex-direction row
			align-items flex-end
			justify-content center

			.price--old
				font-weight 100
				font-size 1.2rem
				margin-bottom 7px

				line-height 32px

				span
					color #4c4c4c
					
			.price--new
				line-height 40px

		& ^[0]__gift
			font-size 20px
			margin-top 4px

		button 
			font-size 16px
			font-weight 700

			border 2px solid

			&.md-accent
				border-color transparent

			&:disabled
				border-color rgba(169, 167, 167, 0.45)
			
		& ^[0]__footer
			padding 0

	&__header
	&__body
	&__footer
		padding 10px

	&__logo
		width 100px
		display block
		margin 0 auto
		
		img
			display block
		
	&__title
		color #212121
		font-weight 900
		font-size 1.2rem

		margin-bottom 5px

		* + &
			margin-top 10px

	&__sub
		color #4c4c4c

	&__price
		flex 0 0 auto

	&__note
		font-size 13px
		font-weight 100
		color #616161

		strong
			font-weight 700

	&__footer
		// margin-top 10px