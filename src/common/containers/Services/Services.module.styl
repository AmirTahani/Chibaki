@import '../../styles/variables'

.container
    display flex
    flex-flow row nowrap

.services
    
    &Container
        composes l-container l-container--sm from '../../styles/container.styl'

        max-width 700px
        padding 90px 20px 0

    &Heading
        font-weight: 600;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-align: right;
        color $dark-grey-blue
        
    &Wrapper
        column-count 3
        column-gap 20px
        
        @media (max-width $lg)
            column-count 2
            
        @media (max-width $sm)
            column-count 1

        > div
            -webkit-margin-before: 0;
            -webkit-margin-after: 0;
            -webkit-column-break-inside: avoid;
            column-break-inside: avoid;

    &Cover
        display block

        width 100%

        height 350px
        max-height 50vh
        
        border-radius 4px
        background-color #424242

        object-fit cover
        font-family 'object-fit: cover;'

        margin-bottom 4.5rem

        @media (max-width $md)
            height 170px
            margin-bottom 1.5rem

    &Item
        line-height 1.7

        transition .1s $ease

        font-weight 500
        font-size 14px

        color: alpha($dark-grey-blue, .85)

        &Icon
            display inline-block
            margin-left 10px

            transform rotate(90deg)

        &
        &Parent
            display: block;
            border: 0;

            padding 6px 0 6px 6px
            margin-bottom: 9px

        &Parent
            font-weight: 900
            font-size: 16px
            color: $dark-grey-blue

    &Row
        margin-bottom 5.5rem
        
        &:last-of-type
            border-bottom none

    &Nav
        z-index 100
        position absolute

        margin-top 110px
        width auto !important

        right 50px
        left auto !important

        &Item
            font-weight 500
            font-size 16px
            
            display block
            line-height 1.4
            
            padding 20px

            &:after
                content ''
                position absolute
                
                bottom 0
                left 0
                right 0
                
                margin 0 auto
                
                width 25%
                height 2px
                
                background-color $color
                opacity 0

                transition .15s ease-in-out
                    
            &Active
                &:after
                    opacity 1
                    width 90%

        @media (max-width 1300px)
            right 0 !important
            margin $headerHeight 0 0 !important
            left: 0 !important;
            width: 100% !important;

            overflow-x: auto;

            display: flex;
            flex-flow: row nowrap;

            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,.1);

            &Item
                padding 15px
                font-size 14px
                white-space nowrap

        @media (max-width $md)
            margin $headerHeightMd 0 0 !important

.search
    &Dropdown
        background-color #fff !important

    &Wrapper
        padding 3rem 0 6rem

        @media (max-width 1300px)
            /.search
                &Wrapper
                    padding 4rem 0 3rem

        :global(.ant-select-auto-complete.ant-select .ant-select-selection__placeholder)
            right 22px

    &Component
        margin 0 auto
        padding 0 !important

        position relative

        // @media (max-width $md)

    &Field :global(.ant-select-selection)
        padding 0 !important

    &Input
        border 1px solid rgba(117, 140, 160, 0.4) !important
        border-radius 5px !important

        padding 9px 22px !important

        line-height 41px !important
        height 41px !important

        color #758ca0 !important
        
        &::-webkit-input-placeholder
            color #758ca0 !important

        &::-moz-placeholder
            color #758ca0 !important

        &:-ms-input-placeholder
            color #758ca0 !important

        @media (max-width $md)
            // padding 0 !important

    &Btn
        position absolute

        width auto

        left 0
        top 0
        bottom 0

        z-index 99

        background transparent !important
        color $color !important

        &:hover
        &:focus
            background transparent !important
            color darken($color, 30%) !important

.separator
	border-bottom: 1px solid #03a9f4;
    
.paddingTop
	padding-top: 60px;

.section
	padding-top: 2rem;

