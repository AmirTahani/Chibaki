@import '../../styles/variables'

.container
    // padding: 1.5rem;

.services
    
    &Container
        composes l-container l-container--sm from '../../styles/container.styl'
        max-width 700px
        padding-top 90px

    &Heading
        font-weight: 600;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-align: right;
        color $dark-grey-blue
        
    &Wrapper
        column-count 3
        column-gap 20px
        
        @media (max-width $lg)
            column-count 2
            
        @media (max-width $sm)
            column-count 1

        > div
            -webkit-margin-before: 0;
            -webkit-margin-after: 0;
            -webkit-column-break-inside: avoid;
            column-break-inside: avoid;

    &Cover
        display block

        width 100%
        height 350px
        
        border-radius 4px
        background-color #424242

        object-fit cover
        font-family 'object-fit: cover;'

        margin-bottom 4.5rem

    &Item
        font-weight: 900
        font-size: 16px

        transition .1s $ease

        &Icon
            margin-left 10px

        &
        &Child
            display: block;
            border: 0;

            padding 6px 0 6px 6px
            margin-bottom: 9px

            color: $dark-grey-blue

        &Child
            font-weight 500
            font-size 14px


    &Row
        margin-bottom 5.5rem
        
        &:last-of-type
            border-bottom none

    &Nav
        position fixed
        top 110px
        right 50px

        overflow-y auto
        bottom 0

        &Item
            font-weight 500
            font-size 16px
            
            display block
            line-height 1.4
            
            padding 20px

            &:after
                content ''
                position absolute
                
                bottom 0
                left 0
                right 0
                
                margin 0 auto
                
                width 25%
                height 2px
                
                background-color $color
                opacity 0

                transition .15s ease-in-out
                    
            &Active
                &:after
                    opacity 1
                    width 90%

.separator
	border-bottom: 1px solid #03a9f4;
    
.paddingTop
	padding-top: 60px;

.section
	padding-top: 2rem;

