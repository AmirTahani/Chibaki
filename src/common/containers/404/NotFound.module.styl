@import '../../styles/variables.styl'

.container {
    background-color: #1e87f0;
    width: 100%;
    height: 100%;
    padding-top 65px;
    display: flex
    flex-direction column
    align-items center
    justify-content center
    min-height 500px
}

.header {
    color: #fff;
    text-align: center;
    font-size 100px
    @media (max-width $md) {
        font-size 70px
    }
}

.text {
    color: #ffffff;
    text-align: center;
    font-size: 40px
    @media (max-width $md) {
        font-size 30px
    }
}