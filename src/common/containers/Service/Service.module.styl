.wrapper
	background-color: #f6f7f9
	
.container
	composes l-container from '../../styles/container.styl'
	padding: 0 20px
	
.section
	padding: 40px 20px;

.hero
	position: relative;
	
	min-height: 300px;
	overflow: hidden;
	
	margin-top: 60px;
	padding: 60px 20px;
	
	display: flex;
	align-items: center;
	justify-content: center;

.heroBg
	position: absolute;
	
	top: 0;
	left: 0;
	
	width: 100%;
	height: 100%;
	
	z-index: 1;

	&:after
		content: '';
		
		position: absolute;
		top: 0;
		left: 0;
		
		width: 100%;
		height: 100%;
		
		background-color: rgba(0, 0, 0, .3);
		z-index: 2;

	img
		width: 100%;
		height: 100%;
		
		object-fit: cover;
		font-family: 'object-fit: cover;';

.heroContent
	position: relative;
	
	text-align: center;
	
	z-index: 10;

.heroTitle
	font-size: 3rem;
	font-weight: 900;
	
	margin-bottom: 1rem;
	
	color: #fff;
	text-align: center;
	
	line-height: 2;
	text-shadow: 0 0 3px rgba(0, 0, 0, .8);

.price
	font-size: 1.5rem;
	font-weight: 900;
	
	text-align: center;
	
	color: #02BE64;
	
	margin-top: 3.8rem;

.desc
	background-color: #fff;
	
	padding: 1.8rem 2.2rem;
	border-radius: 5px;
	margin-top: 2.8rem;
	
	color: #334657;
	
	font-size: 1.1rem;
	line-height: 2.1;

.title
	font-size: 1.5rem;
	font-weight: 900;
	line-height: 1.8;
	
	margin: 0 0 1rem 0;

.subtitle
	font-size: 1.1rem;
	font-weight: 500;
	line-height: 1;

.card
	margin: 30px 0 0 0 !important
	padding: 2.4rem
	
	color: #000
	
	composes c-card from '../../styles/card.styl'
	
	&:hover
	&:focus
		.btn
			background-color: #0e6ccb;
			
.btn
	composes c-btn c-btn--primary c-btn--lg from '../../styles/btn.styl'

.avatar
	width: 150px;
	height: 150px;
	
	display: block;
	margin: 10px auto;
	
	border-radius: 75px;
	
	box-shadow: 0 3px 6px rgba(117, 140, 160, 0.6);
	
	object-fit: cover;
	font-family: 'object-fit: cover;';

.cardName
	color: #000;
	font-size: 1.5rem;
	font-weight: 900;
	margin-top: 5px;
	text-align: center;

.cardDesc
	color: #758CA0;
	font-size: 21px;
	
	line-height: 1.7;
	padding: 20px;
	margin-bottom: 20px;

@media (max-width: 768px)
	.container
		padding: 0 10px;
	
	.hero
		min-height: 250px;
		padding: 30px 10px;
	
	.heroTitle
		font-size: 2.2rem;
		
		margin-bottom: .7rem;
		
		line-height: 1.5;
