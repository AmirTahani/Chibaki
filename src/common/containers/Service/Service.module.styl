@import '../../styles/variables.styl'

.wrapper
	background-color: #f6f7f9

.container
	composes l-container from '../../styles/container.styl'
	padding: 0 20px
	
	@media (max-width $md)
		padding: 0

.section
	padding: 40px 20px;

.hero
	position: relative;
	
	min-height: 300px;
	overflow: hidden;
	
	margin-top: 60px;
	padding: 60px 20px;
	
	display: flex;
	align-items: center;
	justify-content: center;

.heroBg
	position: absolute;
	
	top: 0;
	left: 0;
	
	width: 100%;
	height: 100%;
	
	z-index: 1;
	
	&:after
		content: '';
		
		position: absolute;
		top: 0;
		left: 0;
		
		width: 100%;
		height: 100%;
		
		background-color: rgba(0, 0, 0, .3);
		z-index: 2;
	
	img
		width: 100%;
		height: 100%;
		
		object-fit: cover;
		font-family: 'object-fit: cover;';

.heroContent
	position: relative;
	
	text-align: center;
	
	z-index: 10;

.heroTitle
	font-size: 3rem;
	font-weight: 900;
	
	margin-bottom: 1rem;
	
	color: #fff;
	text-align: center;
	
	line-height: 2;
	text-shadow: 0 0 3px rgba(0, 0, 0, .8);

.price
	font-size: 1.5rem;
	font-weight: 900;
	
	text-align: center;
	
	color: #02BE64;
	
	margin-top: 3.8rem;

.desc
	background-color: #fff;
	
	padding: 1.8rem 2.2rem;
	border-radius: 5px;
	margin-top: 2.8rem;
	
	color: #334657;
	
	font-size: 1.1rem;
	line-height: 2.1;

.title
	font-size: 1.5rem;
	font-weight: 900;
	line-height: 1.8;
	
	margin: 0 0 1rem 0;

.subtitle
	font-size: 1.1rem;
	font-weight: 500;
	line-height: 1;
	
.title
.subtitle
	@media (max-width $md)
		padding: 0 15px

.card
	composes c-card from '../../styles/card.styl'
	
	margin: 0 0 30px 0 !important
	padding: 0 !important
	
	border 1px solid alpha(#9BB2C6, 30%) !important
	box-shadow: none !important
	
	color: #000
	
	&Wrapper
		margin-top: 30px
	
	&Link
		&:hover
		&:focus
			outline none
			text-decoration: none
			
			.btn
				background-color: #0e6ccb;
	
	&Right
	&Left
		padding: 2.4rem
	
	&Left
		display: flex
		flex-direction: column
		justify-content: space-between;
	
	&Right
		border-left: 1px solid alpha(#9BB2C6, 30%)
	
	&Rate
		text-align: center
		margin-top: 10px
		
	@media (max-width $md)
		padding: 20px 0 !important
		margin-bottom: 0!important
		
		border none !important
		border-top: 1px solid alpha(#9bb2c6, 30%) !important
		
		border-radius: 0
		
		&Right
		&Left
			padding: 1rem
		
.btn
	composes c-btn c-btn--primary c-btn--lg from '../../styles/btn.styl'
	
	&More
		appearance: none
		
		color: alpha(#758CA0, 75%)
		font-size: 18px
		
		padding: 11px 27px
		border-radius: 50px
		
		line-height: 27px
		
		box-shadow: 0 3px 6px alpha(#758CA0, 60%);
		border 1px solid rgba(0, 0, 0, 0)
		background: #fff
		
		cursor: pointer
		transition .1s
		
		margin: 10px 10px 50px
		text-align: center
		
		&:hover
		&:focus
			outline none
			color $color
			border-color $color
		
		&:active
			color darken($color, 30%)
			border-color darken($color, 30%)

.avatar
	width: 150px;
	height: 150px;
	
	display: block;
	margin: 10px auto;
	
	border-radius: 75px;
	
	box-shadow: 0 3px 6px rgba(117, 140, 160, 0.6);
	
	object-fit: cover;
	font-family: 'object-fit: cover;';

.cardName
	color: #000;
	font-size: 1.5rem;
	font-weight: 900;
	margin-top: 8px;
	text-align: center;

.cardDesc
	position: relative
	
	color: #758CA0;
	font-size: 21px;
	
	line-height: 36px;
	height: 144px
	
	margin: 20px 10px 30px 50px
	
	overflow: hidden
	
	&:after
		content ''
		
		position: absolute
		bottom: 0
		left: 0
		width: 90%
		height: 36px
		
		background linear-gradient(to right, #fff 90%, rgba(0, 0, 0, 0))
		
	@media (max-width $md)
		margin: 0

.jobCard
	width: 290px
	flex 1 0 290px
	
	//height: 100%
	
	margin-left: 30px
	padding: 1.6rem 2rem
	
	background-color: #fff;
	border 1px solid alpha(#9BB2C6, 30%)
	
	border-radius: 5px
	
	&Wrapper
		margin-top: 2rem
		
		&:not(:global(.flickity-enabled))
			display: flex
			flex-flow row nowrap
			overflow: auto;
		
		//:global(.flickity-slider)
		//	display: flex
		//	align-items: stretch
		//	flex-direction: row
		//	> *
		//		height: 100%
	
	&Date
		color: alpha(#758CA0, 75%)
		font-size: 14px
		text-align: center
		
		margin-bottom: 41px
	
	&Row
		margin-bottom: 30px
	
	&Title
		font-size: 18px
		font-weight: 900
		color: #334657
		margin-bottom: 5px
	
	&Sub
		font-size: 16px
		color: #758CA0

.badge
	composes l-flex-shrink from '../../styles/grid.styl'
	margin: 5px
	text-align: center
	opacity: .4
	
	&Active
		opacity: 1
	
	&Wrapper
		@media (max-width $md)
			display: flex
			flex-flow row nowrap
			justify-content: space-between;
			
			margin-top: 15px
	
	&Text
		display: none
	
	&Img
		max-width: 60px
		width: 100%
		height: 47px
		object-fit cover
		
	@media (max-width $md)
		margin: 0

@media (max-width: 768px)
	.hero
		min-height: 250px;
		padding: 30px 10px;
	
	.heroTitle
		font-size: 2.2rem;
		
		margin-bottom: .7rem;
		
		line-height: 1.5;


